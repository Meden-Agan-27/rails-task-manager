<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<p><%= @task.completed? ? "Done!" : "Still to do!"%></p>
<button><%= link_to "Edit your task", edit_task_path(@task) %></button>
<button><%= link_to "Delete", task_path(@task),
      method: :delete,
      data: { confirm: "Are you sure?" } %></button>
<%= link_to "Back to tasks", tasks_path %>
